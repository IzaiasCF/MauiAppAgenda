<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAgenda.Views.Evento"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Blue" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Image
                Source="agenda.png"
                HeightRequest="90"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

        <Label Text="{Binding NomeEvento}"
               TextColor="NavajoWhite"
               FontFamily="Montserrat"
               FontSize="30"
               HorizontalTextAlignment="Center" />

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Pessoas: "  />
                    <Label Text="{Binding NumeroParticipantes}" 
                           TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto" >
                <Label Grid.Row="0" Grid.Column="0" Text="Ínício" />
                <Label Grid.Row="0" Grid.Column="1" Text="Término" />
                <Label Grid.Row="0" Grid.Column="2" Text="Local" />

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataInicio, StringFormat='{}{0:dd/MM/yyy}'}"
                       TextColor="{StaticResource Primary}" />
                
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataTermino, StringFormat='{}{0:dd/MM/yyy}'}"
                       TextColor="{StaticResource Primary}" />

                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding LocalEvento}"
                       TextColor="{StaticResource Primary}" />
                
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total: " />
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" 
                       TextColor="{StaticResource Primary}"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" 
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
</ContentPage>