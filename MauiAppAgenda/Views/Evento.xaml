<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAgenda.Views.Evento"
             Title="Evento"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Blue" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Formatura"
               TextColor="NavajoWhite"
               FontFamily="Montserrat"
               FontSize="30"
               HorizontalTextAlignment="Center" />

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Pessoas: "  />
                    <Label Text="2" TextColor="{StaticResource Primary}" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto" >
                <Label Grid.Row="0" Grid.Column="0" Text="Ínício" />
                <Label Grid.Row="0" Grid.Column="1" Text="Término" />
                <Label Grid.Row="0" Grid.Column="2" Text="Local" />

                <Label Grid.Row="1" Grid.Column="0" Text="29/05/2025" />
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025" />
                <Label Grid.Row="1" Grid.Column="2" Text="São Paulo, SP" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total: " />
                <Label Text="R$ 250,00" />
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" 
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
</ContentPage>